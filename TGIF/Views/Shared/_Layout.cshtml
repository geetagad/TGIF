<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - The Gifted In Fremont</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <header>
        <div class="content-wrapper">
            <div class="float-left">
                @*<p class="site-title">@Html.ActionLink("~/Images/TGIFlogo.jpg", "Index", "Home")</p>*@
               @*<p class="site-title">@Html.ActionLink("logo", "Index", null, new { @class = "site-logo" })</p>*@
               <p class="site-title">
                    <a href="~/">
                        <img src="~/Images/TGIFlogo.jpg" alt="No Image" /></a>
                </p>
            </div>
            <div class="float-right">
                <section id="login">
                    @Html.Partial("_LoginPartial")
                </section>
                <nav>
                    <ul id="nav" >
                        <li >@Html.ActionLink("Home", "Index", "Home")</li>
                        @*<li>@Html.ActionLink("Paypal Testing", "PaypalTest","PayPal")</li>*@
                        <li>@Html.ActionLink("Event", "Index", "Event")</li>
                        @if (User.IsInRole("Administrator"))
                        {
                            <li>@Html.ActionLink("User", "UserList", "Account")</li>
                            <li>@Html.ActionLink("Volunteer", "Index", "Volunteer")</li>
                            <li>@Html.ActionLink("FAQ", "Index", "FAQ")</li>
                        }
                        else
                        {
                            <li>@Html.ActionLink("Myprofile", "UserDetail", "Account", new { id = WebSecurity.GetUserId(User.Identity.Name) }, null)</li>
                            <li>@Html.ActionLink("FAQ", "FAQListByType", "FAQ", new { type = "Membership" }, null)
                                <ul>
                                    <li>@Html.ActionLink("Membership", "FAQListByType", "FAQ", new { type = "Membership" }, null)</li>
                                    <li>@Html.ActionLink("Event","FAQListByType", "FAQ",new { type = "Event" },null)</li>
                                    <li>@Html.ActionLink("Other","FAQListByType", "FAQ",new { type = "Other" },null)</li>
                                </ul>
                            </li>
                        }
                        
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        
                    </ul>
                </nav>
            </div>
        </div>
    </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - GSG</p>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
