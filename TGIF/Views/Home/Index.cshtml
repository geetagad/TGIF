@{
    ViewBag.Title = "Mission Statement";
}
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title</h1>
                <h2>@*@ViewBag.Message*@</h2>
            </hgroup>
            <p>
                The purpose of The Gifted in Fremont shall be to promote the interests of gifted and talented students in the Fremont Unified School District 
                 by encouraging the fullest development of their potential at home and at school and providing encouragement and being a source of information
                 to parents and educators of gifted and talented children in the Fremont, California public schools.
            </p>
        </div>
    </section>
}
<h3>Getting Started:</h3>
<ul>
    <li >
       <h4>Step 1:  Sign up for <a href="~/Account/Register"> Membership Registration</a></h4> 
    </li>

    <li >
        <h4>Step 2: Sign up for Events you are interested in once you become TGIF member.</h4>
    </li>

</ul>


@*<div id="calendar"></div>*@


@section Scripts {
    @*For Calendar*@
    @Styles.Render("~/Content/Site.css")
    @Styles.Render("~/Content/fullcalendar.css")
    @Styles.Render("~/Content/jquery-ui-1.7.2.custom.css")
    @Scripts.Render("~/Scripts/jquery-1.3.2.js")
    @Scripts.Render("~/Scripts/fullcalendar.js")
    @*@Scripts.Render("~/Scripts/jquery-ui-1.7.2.custom.min.js")*@
    @*jquery-1.9.1.min.js*@

    <script type="text/javascript">
        $(document).ready(function () {
            $('#calendar').fullCalendar({
                events: "/Home/CalendarData",
                color: 'yellow',   // a non-ajax option
                textColor: 'black', // a non-ajax option
                height: 100,
                aspectRatio: 0.25,
                header: {
                    left: "prev,next today",
                    center: "title",
                    right: "month,agendaWeek,agendaDay"
                    },
             });
        });
    </script>
}